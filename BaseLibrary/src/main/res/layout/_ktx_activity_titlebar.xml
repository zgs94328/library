<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <com.zgs.baselibrary.widget.ImmersionLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/fakeTitleBar"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.zgs.baselibrary.widget.TitleBar android:id="@+id/titleBar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            app:rightImagePadding="12dp"
            app:leftImagePadding="10dp"
            app:leftImageSrc="@mipmap/_ktx_ic_back"
            android:layout_height="40dp" />

        <View
            android:id="@+id/titleDivider"
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="1pt" />

        <FrameLayout
            android:id="@+id/flBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zgs.baselibrary.widget.ImmersionLinearLayout>
</layout>